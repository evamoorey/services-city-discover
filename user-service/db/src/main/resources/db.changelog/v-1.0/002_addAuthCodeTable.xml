<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="1" author="e.galyuta">
        <createTable tableName="auth_code" remarks="User's disposable codes for auth">

            <column name="email" type="varchar" remarks="User email">
                <constraints nullable="false"/>
            </column>

            <column name="code" type="varchar" remarks="Disposable auth code">
                <constraints nullable="false"/>
            </column>

            <column name="creation_date" type="timestamp with time zone"
                    defaultValueComputed="${datatype.date.currentTimestamp}" remarks="Code creation time">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>