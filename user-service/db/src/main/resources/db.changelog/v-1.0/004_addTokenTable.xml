<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="3" author="e.galyuta">
        <createTable tableName="token" remarks="User's token">

            <column name="user_id" type="${uuid_type}" remarks="User id">
                <constraints foreignKeyName="fk_token_user_id" references="user(id)"/>
            </column>

            <column name="refresh_token" type="varchar" remarks="User refresh token">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>