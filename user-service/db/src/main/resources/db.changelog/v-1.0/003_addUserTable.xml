<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="2" author="e.galyuta">
        <createTable tableName="user" remarks="User's info">

            <column name="id" type="${uuid_type}" defaultValue="${uuid_function}" remarks="User id">
                <constraints primaryKey="true" primaryKeyName="pk_user_uuid"/>
            </column>

            <column name="email" type="varchar" remarks="User email">
                <constraints nullable="false"/>
            </column>

            <column name="username" type="varchar" remarks="Username"/>

            <column name="creation_date" type="timestamp with time zone"
                    defaultValueComputed="${datatype.date.currentTimestamp}" remarks="Code creation time">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>