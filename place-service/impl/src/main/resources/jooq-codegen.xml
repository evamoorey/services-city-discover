<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns="http://www.jooq.org/xsd/jooq-codegen-3.18.0.xsd">
    <jdbc>
        <driver>org.postgresql.Driver</driver>
        <url>jdbc:postgresql://localhost:5432/place_info</url>
        <username>postgres</username>
        <password>postgres</password>
    </jdbc>
    <generator>
        <database>
            <includes>.*</includes>
            <excludes>
                databasechangelog
                | databasechangeloglock
            </excludes>
            <!--							<inputCatalog>pg_catalog</inputCatalog>-->
            <inputSchema>public</inputSchema>
            <forcedTypes>
                <forcedType>
                    <name>INSTANT</name>
                    <includeExpression>.*\.creation_date</includeExpression>
                </forcedType>
                <forcedType>
                    <name>INSTANT</name>
                    <includeExpression>.*\.modification_date</includeExpression>
                </forcedType>
            </forcedTypes>
        </database>
        <generate>
            <records>true</records>
        </generate>
        <target>
            <packageName>org.city_discover.domain.jooq</packageName>
            <directory>src/main/java</directory>
        </target>
    </generator>
</configuration>