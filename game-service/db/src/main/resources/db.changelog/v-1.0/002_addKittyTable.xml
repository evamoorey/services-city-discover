<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="1" author="e.galyuta">
        <createTable tableName="kitty" remarks="Kitties">
            <column name="id" type="${uuid_type}" defaultValueComputed="${uuid_function}" remarks="Kitty ID">
                <constraints primaryKey="true" primaryKeyName="pk_place_uuid"/>
            </column>
            <column name="name" type="varchar" remarks="Kitty name">
                <constraints nullable="false"/>
            </column>
            <column name="latitude" type="double" remarks="Kitty place latitude">
                <constraints nullable="false"/>
            </column>
            <column name="longitude" type="double" remarks="Kitty place longitude">
                <constraints nullable="false"/>
            </column>
            <column name="photo_id" type="uuid" remarks="Kitty photo id">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>